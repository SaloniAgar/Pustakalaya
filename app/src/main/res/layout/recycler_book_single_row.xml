<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:weightSum="6"
        android:orientation="horizontal"
        android:id="@+id/llRecyclerBookHome">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:scaleType="centerCrop"
            android:id="@+id/imgBookHome"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textSize="22sp"
                android:text="Book name"
                android:maxLength="15"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/txtRecyclerBookName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="Author name"
                android:maxLength="18"
                android:layout_below="@+id/txtRecyclerBookName"
                android:id="@+id/txtRecyclerBookAuthor"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/imgHomeFavIcon"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/btnReadHome"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:text="More"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>